<div class="jumbotron">
    <h2 class="text-center">Profiles</h2>
    <br>
    <table class="table">
      <thead>
        <tr>
          <th>Avatar</th>
          <th>Name</th>
          <th>Bio</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= image_tag profile.avatar, class: "img-thumbnail", size: "70x70" %></td>
            <td><%= profile.name %></td>
            <td><%= profile.bio %></td>
            <td><%= profile.user.username %></td>
            <td><%= link_to 'Show', profile %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Profile', new_profile_path %>

  </table>


</div>
