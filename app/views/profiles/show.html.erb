<div class="jumbotron">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 col-sm-4">
        <%= image_tag @profile.avatar, class: "img-thumbnail" %>
      </div>
      <div class="col-md-4 col-sm-4">
        <p>
          <strong>Name:</strong>
          <%= @profile.name %>
        </p>
        <p>
          <strong>User:</strong>
          <%= @profile.user.username %>
        </p>
        <p>
          <strong>Engaugements:</strong>

        </p>
      </div>
      <div class="col-md-4 col-sm-4">
        <p>
          <strong>Bio:</strong>
          <%= @profile.bio %>
        </p>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-4 col-sm-4">
        <% if current_user.username == @profile.user.username %>
          <%= link_to 'Edit', edit_profile_path(@profile) %> |
          <%= link_to 'Destroy', @profile, method: :delete, data: { confirm: 'Are you sure?' } %> |
          <%= link_to 'Back', profiles_path %>
        <% else %>
          <%= link_to 'Back', profiles_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
