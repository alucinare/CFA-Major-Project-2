<p id="notice"><%= notice %></p>

<p>
  <strong>Topic:</strong>
  <%= @chatroom.topic %>
</p>

<%= link_to 'Edit', edit_chatroom_path(@chatroom) %> |
<%= link_to 'Back', chatrooms_path %>

<div class="row">
  <div class="col s12 m12">
    .<div class="card blue-grey darken-1">
      .<div class="card-content white-text">
        <span class="card-title"><%= @chatroom.topic %></span>
          <% if @chatroom.messages.any? %>
          <p id="messages"><%= render partial: 'messages/message', collection: @chatroom.messages%></p>
          <%else%>
            <div class="panel-body hidden" id="messages">
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: 'messages/form', locals: {message: @message, chatroom: @chatroom}%>
